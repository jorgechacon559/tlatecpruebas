# Base de datos SQLite (No requiere instalación)
DB_FILE=./suscripciones.db

# Configuración de Email (Gmail) - OBLIGATORIO para envío de correos
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password-de-gmail

# Configuración del Servidor
PORT=3000
NODE_ENV=development

# URLs de tu sistema
APP_URL=http://localhost:3000

# Stripe API - Para todos los pagos (MODO LIVE - PRODUCCIÓN)
STRIPE_SECRET_KEY=sk_live_TU_CLAVE_SECRETA_AQUI
STRIPE_PUBLISHABLE_KEY=pk_live_TU_CLAVE_PUBLICA_AQUI
# STRIPE_WEBHOOK_SECRET=whsec_... (opcional - para verificar firma del webhook en producción)

# Price IDs de Stripe
# Suscripciones (recurrentes)
STRIPE_PRICE_PREMIUM=price_TU_PRICE_ID_PREMIUM
STRIPE_PRICE_BASIC=price_TU_PRICE_ID_BASIC

# Productos únicos (one-time)
STRIPE_PRICE_WEBSITE=price_TU_PRICE_ID_WEBSITE
STRIPE_PRICE_LOGOS=price_TU_PRICE_ID_LOGOS
